<Window x:Class="ASM_GROUP3.View.SupplierManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ASM_GROUP3.ViewModel"
        Title="Quản lý Nhà cung cấp" Height="600" Width="1000">



    <DockPanel Margin="10">
        <!-- Thanh công cụ -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
            <Button Content="Thêm" Width="80" Margin="0 0 10 0" Command="{Binding AddCommand}" />
            <Button Content="Cập nhật" Width="80" Margin="0 0 10 0" Command="{Binding UpdateCommand}" />
            <Button Content="Xóa" Width="80" Command="{Binding DeleteCommand}" />
        </StackPanel>

        <!-- Bảng dữ liệu -->
        <DataGrid ItemsSource="{Binding Suppliers}" SelectedItem="{Binding SelectedSupplier}"
                  AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã" Binding="{Binding SupplierCode}" Width="80"/>
                <DataGridTextColumn Header="Tên" Binding="{Binding SupplierName}" Width="150"/>
                <DataGridTextColumn Header="Người liên hệ" Binding="{Binding ContactPerson}" Width="150"/>
                <DataGridTextColumn Header="SĐT" Binding="{Binding Phone}" Width="120"/>
                <DataGridTextColumn Header="Địa chỉ" Binding="{Binding Address}" Width="200"/>
                <DataGridCheckBoxColumn Header="Hoạt động" Binding="{Binding IsActive}" Width="80"/>
                <DataGridTextColumn Header="Ngày hợp tác" Binding="{Binding CooperationStartDate, StringFormat='dd/MM/yyyy'}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
