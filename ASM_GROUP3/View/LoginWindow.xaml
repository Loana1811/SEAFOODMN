<Window x:Class="ASM_GROUP3.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ASM_GROUP3.ViewModel"
        Title="Đăng nhập" Height="360" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Background="#ecf0f1">
        <Border Background="White" CornerRadius="10" Padding="20" Margin="20">
            <StackPanel>
                <TextBlock Text="ĐĂNG NHẬP" FontSize="20" FontWeight="Bold"
                           Foreground="#2c3e50" HorizontalAlignment="Center" Margin="0 0 0 20"/>

                <TextBlock Text="Tên đăng nhập:" Margin="0 0 0 5"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Height="30" Margin="0 0 0 10"/>

                <TextBlock Text="Mật khẩu:" Margin="0 0 0 5"/>
                <PasswordBox Name="pwdBox" Height="30" Margin="0 0 0 20"
                             PasswordChanged="PasswordBox_PasswordChanged"/>

                <Button Content="Đăng nhập" Command="{Binding LoginCommand}"
                        Background="#3498db" Foreground="White"
                        FontWeight="SemiBold" Height="35"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
